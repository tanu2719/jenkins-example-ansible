pipeline {
    agent any
    environment {
        VAULT_TOKEN = credentials('MY_HASHI_VAULT')
        USERNAME = credentials('my_username_password').username
        PASSWORD = credentials('my_username_password').password
    }
    stages {
        stage('Run Ansible Playbook') {
            steps {
                // Export the environment variable and run the ansible-playbook command
                script {
                    sh '''
                        export OBJC_DISABLE_INITIALIZE_FORK_SAFETY=YES
                        /Users/tanushreerakshit/.pyenv/ansibleenv/bin/ansible-playbook -i inventory/agent.hosts playbooks/req4.yml -vvv
                    '''
                }
            }
        }
    }
}

